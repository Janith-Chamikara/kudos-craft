<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:KudosCraft.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="KudosCraft.Views.AddWorkspaceWindow"
        x:DataType="vm:AddWorkspaceViewModel"
        Title="Add Workspace"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        Background="Black"
        Foreground="White"
        CanResize="False">

	<Window.Resources>
		<SolidColorBrush x:Key="ErrorBrush" Color="#FF0000"/>
		<SolidColorBrush x:Key="NormalBrush" Color="White"/>
	</Window.Resources>

	<Grid RowDefinitions="Auto,*,Auto" Margin="20">
		<!-- Header -->
		<TextBlock Grid.Row="0"
                   Text="Add New Workspace"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="White"/>

		<!-- Form -->
		<StackPanel Grid.Row="1" Spacing="15">
			<!-- Owner ID -->
			<StackPanel>
				<TextBlock Text="Owner ID"
                           Foreground="White"
                           Margin="0,0,0,5"/>
				<TextBox Text="{Binding OwnerId}"
                         Background="#111111"
                         Foreground="White"
                         BorderBrush="{Binding OwnerIdError, Converter={x:Static ObjectConverters.IsNotNull}, ConverterParameter={StaticResource ErrorBrush}, FallbackValue={StaticResource NormalBrush}}"
                         BorderThickness="1"
                         Padding="10,8"/>
				<TextBlock Text="{Binding OwnerIdError}"
                           Foreground="#FF0000"
                           FontSize="12"
                           Margin="0,5,0,0"
                           IsVisible="{Binding OwnerIdError, Converter={x:Static ObjectConverters.IsNotNull}}"/>
			</StackPanel>
			
			<!-- Name -->
			<StackPanel>
				<TextBlock Text="Workspace Name"
                           Foreground="White"
                           Margin="0,0,0,5"/>
				<TextBox Text="{Binding Name}"
                         Background="#111111"
                         Foreground="White"
                         BorderBrush="{Binding NameError, Converter={x:Static ObjectConverters.IsNotNull}, ConverterParameter={StaticResource ErrorBrush}, FallbackValue={StaticResource NormalBrush}}"
                         BorderThickness="1"
                         Padding="10,8"/>
				<TextBlock Text="{Binding NameError}"
                           Foreground="#FF0000"
                           FontSize="12"
                           Margin="0,5,0,0"
                           IsVisible="{Binding NameError, Converter={x:Static ObjectConverters.IsNotNull}}"/>
			</StackPanel>

			<!-- Description -->
			<StackPanel>
				<TextBlock Text="Workspace Description"
                           Foreground="White"
                           Margin="0,0,0,5"/>
				<TextBox Text="{Binding Description}"
                         Background="#111111"
                         Foreground="White"
                         BorderBrush="White"
                         BorderThickness="1"
                         Padding="10,8"
                         Height="100"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>
			</StackPanel>
		</StackPanel>

		<!-- Buttons -->
		<StackPanel Grid.Row="2"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right"
                   Spacing="10"
                   Margin="0,20,0,0">
			<Button Content="Cancel"
                   Command="{Binding CancelCommand}"
                   Background="Transparent"
                   BorderBrush="White"
                   BorderThickness="1"
                   Foreground="White"
                   Padding="15,8"/>
			<Button Content="Create"
                   Command="{Binding SaveCommand}"
                   Background="White"
                   Foreground="Black"
                   Padding="15,8"/>
		</StackPanel>
	</Grid>
</Window>
